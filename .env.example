# ================================
# Core app
# ================================

# Node environment
NODE_ENV=development

# ================================
# AWS / Amplify
# ================================

# AWS region used by Amplify + DynamoDB
AWS_REGION=ap-southeast-2

# DynamoDB table names (must match deployed tables)
FIAPP_MAIN_TABLE=FIAPP_MAIN
FIAPP_RETURNS_TABLE=FIAPP_RETURNS

# ================================
# Auth (Amplify / Cognito)
# ================================
# Leave empty in dev if auth is not wired yet

COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_IDENTITY_POOL_ID=

# ================================
# Subscription (DEV ONLY)
# ================================
# Used by /api/dev/subscription route

# Enable dev override logic
FIAPP_SUBSCRIPTION_DEV_MODE=true

# Force subscription status in dev
# Allowed values: free | paid
FIAPP_FORCE_SUBSCRIPTION_STATUS=free
